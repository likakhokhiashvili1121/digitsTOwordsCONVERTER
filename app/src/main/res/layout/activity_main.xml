<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#0E1437">


    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:text="@string/georgian_word"
        android:textColor="#473763"
        android:textSize="30sp"
        android:textStyle="bold"
        android:transitionName="GeorgianWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        android:hint="@string/enter_the_number"
        android:inputType="number"
        android:paddingStart="145dp"
        android:textColorHint="@color/purple_200"
        android:transitionName="number"
        tools:ignore="MissingConstraints,RtlSymmetry"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="329dp"
        android:autofillHints="numbers" />

    <Button
        android:id="@+id/converterButton"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:text="@string/convert"
        android:textColor="@android:color/background_dark"
        android:transitionName="converterbutton"
        tools:ignore="MissingConstraints,OnClick,UsingOnClickInXml"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="437dp" />


</androidx.constraintlayout.widget.ConstraintLayout>